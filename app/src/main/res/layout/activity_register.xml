<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidapp.scalar.hailee.RegisterActivity"
    android:background="@drawable/black_yellow_stripes">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="4dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/materialYellow"
                android:layout_marginTop="20dp"
                android:text="Register"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/emailTxt"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittextstyle"
                android:hint="Email"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/passwordTxt"
                android:inputType="textPassword"
                android:background="@drawable/edittextstyle"
                android:hint="Password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/confirmPwTxt"
                android:inputType="textPassword"
                android:background="@drawable/edittextstyle"
                android:hint="Confirm Password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/roleChooser">

                    <RadioButton
                        android:id="@+id/customerRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:text="I'm a Customer"
                        android:textColor="@color/white"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/driverRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:text="I'm a Driver"
                        android:textColor="@color/white" />


                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/registerBtn"
                android:background="@drawable/welcomebuttonstyle"
                android:text="Register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already Registered ? "
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/logintxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In "
                    android:textColor="@color/materialYellow"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:background="@color/materialYellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/logos"
                    android:layout_width="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designed and Developed by Yakku"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
